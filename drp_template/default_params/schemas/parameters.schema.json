{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://m-balcewicz.github.io/drp_template/parameters.schema.json",
  "title": "DRP Parameters File",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "schema_version": { "type": "string", "pattern": "^\\d+\\.\\d+(\\.\\d+)?$" },
    "generator": { "type": "string" },
    "created_at": { "type": "string" },
    "modified_at": { "type": "string" },

    "file_path": { "type": "string" },
    "file_format": { "type": "string" },
    "dtype": { "type": "string" },
    "endian": { "type": "string", "enum": ["big", "small", "little", "big-endian", "little-endian"] },

    "dim": { "type": "integer", "minimum": 1, "maximum": 4 },
    "nx": { "type": "integer", "minimum": 1 },
    "ny": { "type": "integer", "minimum": 1 },
    "nz": { "type": "integer", "minimum": 1 },
    "voxel_size": { "type": ["number", "integer"], "minimum": 0 },

    "file_size_bytes": { "type": "integer", "minimum": 0 },
    "file_size_mb": { "type": ["number", "integer"], "minimum": 0 }
  },
  "required": ["schema_version", "generator", "created_at", "modified_at"]
}
